{
    "namespace": "how_to_play",
    "how_to_play_selector_stack_panel/how_to_play_selector_pane": {
        "modifications": [
            {
                "array_name": "controls",
                "operation": "insert_front",
                "value": [
                    {
                        "padding_00": {
                            "type": "panel",
                            "size": [0, 6]
                        }
                    },
                    {
                        "debug_stick_category@how_to_play_common.topic_category": {
                            "$category": "debug_stick"
                        }
                    },
                    {
                        "debug_stick_button@how_to_play.debug_stick_button": {
                            "$toggle_group_forced_index": 100,
                            "ignored": "$education_edition"
                        }
